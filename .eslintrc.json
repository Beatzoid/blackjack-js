{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["*.html", "*.css"],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "never"],
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "no-param-reassign": "off",
        "operator-linebreak": "off",
        "no-multi-assign": "off",
        "object-curly-newline": "off",
        "no-restricted-syntax": "off",
        "guard-for-in": "off"
    }
}
